<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:background="@drawable/list_selector"
    android:padding="5dp"
    android:id="@+id/timer_list_item_layout"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/timer_list_item_indicator"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/indicator_enabled" />

    <TextView
        android:id="@+id/timer_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/timer_list_item_indicator"
        android:gravity="top"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium.Inverse"
        android:text="@string/timer_name"
        android:maxLength="15" />

    <TextView
        android:id="@+id/timer_list_item_date"
        android:layout_toRightOf="@id/timer_list_item_name"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:gravity="right|center_vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/DVBActionBar" />


    <TextView
        android:id="@+id/timer_list_item_channel"
        android:layout_below="@id/timer_list_item_name"
        android:layout_toRightOf="@id/timer_list_item_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:textColor="@color/DVBActionBar"
        android:text="@string/channels"
        android:maxLength="20" />

    <TextView
        android:id="@+id/timer_list_item_time"
        android:layout_below="@id/timer_list_item_name"
        android:layout_toRightOf="@id/timer_list_item_channel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/DVBActionBar" />

</RelativeLayout>