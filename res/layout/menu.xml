<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/DVBBackgroundLight">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="15dp"
        android:background="@drawable/dvbcard"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Sherlock.Light.Small"
            android:color="@color/DVBShadow"
            android:text="@string/active_device"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            />

        <TextView
            android:id="@+id/active_profile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textAppearance="@style/TextAppearance.Sherlock.Widget.ActionBar.Title"
            android:textSize="22sp"
            android:text="@string/demo_device"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:drawableRight="@drawable/ic_action_change_profile_dark"
            />

        <View
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:background="#ffffff"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <ListView
            android:id="@+id/menu_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />
    </LinearLayout>
</LinearLayout>