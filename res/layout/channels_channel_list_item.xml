<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/channel_item_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp"

        >
    <TextView
            android:id="@+id/channel_item_name"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="14sp"
            android:textColor="@color/abs__primary_text_holo_dark"
            android:background="@drawable/dvbbackground"
            android:layout_marginBottom="5dp"
            android:text="channel_item_name"/>

    <ImageView
            android:id="@+id/channel_item_logo"
            android:layout_width="75dp"
            android:layout_height="55dp"
            android:layout_below="@id/channel_item_name"
            android:contentDescription="Channel Logo"/>
    <TextView
            android:id="@+id/channel_item_current_epg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/channel_item_logo"
            android:text="ROSAMUNDE PILCHER"
            android:layout_below="@+id/channel_item_name"/>

</RelativeLayout>