<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp">
    <TextView
            android:id="@+id/service_name"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/abs__primary_text_holo_dark"
            android:text="service_name"/>
    <TextView
            android:id="@+id/service_ip"
            android:textSize="12sp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="192.168.1.1"
            android:layout_below="@id/service_name"/>
    <TextView
            android:id="@+id/service_port"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="8000"
            android:layout_toRightOf="@id/service_ip"
            android:layout_below="@id/service_name"/>
</RelativeLayout>